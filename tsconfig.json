{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "/mock/*": ["mock/*"],
      "/server/*": ["server/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
